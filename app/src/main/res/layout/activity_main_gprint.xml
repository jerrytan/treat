<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">

<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">
    <Button
        android:id="@+id/btOpenDialogue"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:onClick="openPortDialogueClicked"
        android:text="@string/printer_connect" />
    <Button 
        android:id="@+id/btPrintTestPage"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/print_test_page"
        android:onClick="printTestPageClicked"
        />
    
       <Button 
        android:id="@+id/btGetStatus"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
           android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/printer_info"
         android:onClick="getPrinterStatusClicked"
        />  
       <Button 
        android:id="@+id/btGetConnectStatus"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
           android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/printer_connect_status"
         android:onClick="getPrinterConnectStatusClicked"
        />  
         <Button 
        android:id="@+id/btGetPrinterCommandType"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
             android:layout_gravity="center"
        android:text="@string/printer_command_status"
         android:onClick="getPrinterCommandTypeClicked"
        />        
        <Button 
        android:id="@+id/btPrintReceipt"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
            android:layout_gravity="center"
        android:layout_height="wrap_content"
            android:visibility="gone"
        android:text="Print receipt"
        android:onClick="printReceiptClicked"
        />


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/printer_beep"
        android:id="@+id/switchBeep" />

    <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="10dp"
           android:src="@drawable/gprinter2120"/>
       <Button 
        android:id="@+id/btPrintLabel"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
           android:layout_gravity="center"
           android:visibility="gone"
           android:layout_height="wrap_content"
        android:text="Print label"
        android:onClick="printLabelClicked"
        />       
         <EditText
        android:id="@+id/etPrintCopies"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
             android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:inputType="number"
             android:visibility="gone"
             android:text="10"
        />      
        <Button 
        android:id="@+id/btPrint"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_height="wrap_content"
        android:text="1 Continuous printing"
        android:onClick="printTest1Clicked"
        />          
      <Button 
        android:id="@+id/btPrint"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:visibility="gone"
          android:text="2 Continuous printing"
        android:onClick="printTest2Clicked"
        />      
       <Button 
        android:id="@+id/btPrint"
           android:visibility="gone"
           android:layout_width="300dp"
        android:layout_marginTop="10dp"
           android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="3 Continuous printing"
        android:onClick="printTest3Clicked"
        />      
    </LinearLayout>
</ScrollView>
